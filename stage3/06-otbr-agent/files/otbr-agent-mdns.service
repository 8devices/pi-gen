[Unit]
Description=mDNS service for otbr-agent
Wants=network.target

[Service]
Type=simple
ExecStart=/usr/sbin/otbr-agent-mdns
# Use SIGINT to stop
KillSignal=SIGINT
# Auto restart on crash
Restart=on-failure
# Tag things in the log
SyslogIdentifier=OTBR-AGENT-MDNS

[Install]
Alias=restserver-ssdp
WantedBy=multi-user.target
