[Unit]
Description=SSDP server for LwM2M REST API server
Wants=network.target

[Service]
Type=simple
ExecStart=/usr/local/sbin/restserver-ssdp
# Use SIGINT to stop
KillSignal=SIGINT
# Auto restart on crash
Restart=on-failure
# Tag things in the log
SyslogIdentifier=REST-SSDP

[Install]
Alias=restserver-ssdp
WantedBy=multi-user.target
